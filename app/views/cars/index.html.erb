<h1>All Cars</h1>
<%= link_to 'New Car', new_car_path %>
<table>
	<thead>
		<tr>
			<th>Car Color</th>
			<th>Registration Number</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @cars.each do |car| %>
			<tr>
				<td><%= car.color %></td>
				<td><%= car.registration_number %></td>
				<td><%= link_to 'View', car %></td>
				<td><%= link_to 'Edit', edit_car_path(car) %></td>
				<td><%= link_to 'Delete', car, data: { "turbo-method": :delete } %></td>
			</tr>
		<% end %>
	</tbody>
</table>